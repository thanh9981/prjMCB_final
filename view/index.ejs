<html>
    <head>
        <title>MCB</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
        <link rel="stylesheet" href="node_modules/mdbootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="node_modules/mdbootstrap/css/mdb.min.css">
        <link rel="stylesheet" href="node_modules/mdbootstrap/css/style.css">
        <script src="socket.io/socket.io.js"></script>
               <!--biểu đồ thời gian thực-->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    </head>

    <body>
        <!--giao diện-->
        <div class="container-fluid text-center">
            <div class="row"> <!--3 thông số cảm biến-->
                <div id="a" class="col-4 rounded-lg " style="border: rgb(42, 161, 165) ridge; height:200px; padding-top: 50px;">
                    <h3>Nhiệt Độ</h3>
                    <div class="nd" style="display: flex; padding-left: 160px;">
                        <p id="Term" style="font-size: 50px"></p>
                        <img src="/public/image/nhietdo.png" alt="Temperature" width="50" height="50">
                    </div>
                </div>
                
                <div id="b" class="col-4 rounded-lg " style="border: rgb(42, 161, 165) ridge; height:200px ;padding-top: 50px;">
                    <h3>Độ ẩm</h3>
                    <div class="da" style="display: flex; padding-left: 160px;">
                        <p id="Humi" style="font-size: 50px"></p>
                        <img src="/public/image/humidity.png" alt="Humidity" width="50" height="50">
                    </div>
                </div>

                <div id="c" class="col-4 rounded-lg " style="border: rgb(42, 161, 165) ridge; height:200px; padding-top: 50px;">
                    <h3>Ánh sáng</h3>
                    <div class="as" style="display: flex; padding-left: 160px;">
                        <p id="Light" style="font-size: 50px"></p>
                        <img src="/public/image/sun.png" alt="lux" width="50" height="50">
                    </div>
                </div>
                
            </div>

            <div class="row"> <!--biểu đồ và bộ điều khiển-->
                <!--biểu đồ-->
                <div class="col-8 rounded-lg p-0" style="border: rgb(42, 161, 165) ridge;">
                    <div>
                    <!--       -->
               
                        <!-- <button id="button_chart" onclick="showChart()"> Click để xem chart</button>   -->
                        <canvas id="myChart" style="max-height: 400px;opacity: 1;"></canvas>
                    </div>
                </div>
                <!--bộ điều khiển-->
                <div class="col-4 d-flex flex-column p-0">
                    <div class="butt1 bg-info h-50 d-inline-block rounded-lg " style="border: rgb(42, 161, 165) ridge;">
                        <div class="Led" style="padding-top: 10px;">
                            <img id="myImage" src="/public/image/lightbulb.png" style="width:60px;padding-top: 15px;">
                            <br>
                            <br>
                            <button  id="ON" onclick="on()"><h4>Bật</h4></button>
                            <button id="OFF" onclick="off()"><h4 >Tắt</h4></button>
                        </div> 
                    </div>

                    <div class="butt2 bg-success h-50 d-inline-block rounded-lg " style="border: rgb(42, 161, 165) ridge;">
                        <div class="Dieuhoa" style="padding-top: 15px;">
                            <img id="myImage2" src="/public/image/quat_off.png" alt="lux" width="100" height="100">
                            <br>
                            <br>
                            <button  id="ON1" onclick="on1()"><h4>Bật</h4></button>
                            <button id="OFF1" onclick="off1()"><h4 >Tắt</h4></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <script src="/public/js/MCB.js"></script>
    </body>
</html>